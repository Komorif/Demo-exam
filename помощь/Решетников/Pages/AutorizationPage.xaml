<Page x:Class="Решетников.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация" Width="381" Height="343">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="Вход в систему" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Height="30" Margin="0,0,0,15"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>
            <Button x:Name="LoginButton" Content="Войти" Height="35" Margin="0,0,0,10"/>

            <Button x:Name="GuestButton" Content="Войти как гость" 
                Height="35" Width="300"
                Margin="0,0,0,10"
                Click="GuestButton_Click"/>
        </StackPanel>

    </Grid>
</Page>