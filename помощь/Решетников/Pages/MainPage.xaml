<Page x:Class="Решетников.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница" Height="317" Width="537">

    <Grid Background="White" Margin="0,0,-55,-40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="#A18191" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                
                <Image Grid.Column="0" Source="/Решетников;component/Logo.png" Width="32" Height="32" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1" Text="РостМех - Компьютерная техника" 
                          FontSize="16" FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" x:Name="UserInfoText" 
                          Text="ФИО: " 
                          Margin="0,0,20,0"
                          VerticalAlignment="Center"/>

                <Button Grid.Column="3" x:Name="LogoutButton" 
                        Content="Выйти" 
                        Padding="10,5"
                        Click="LogoutButton_Click"/>
            </Grid>
        </Border>

        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Главная страница" FontSize="20" Margin="0,0,0,20"/>
            <TextBlock x:Name="RoleInfoText" Text="Роль: " FontSize="16" Margin="0,0,0,30"/>

           
            <Button x:Name="ProductsButton" 
                    Content="Просмотр товаров" 
                    Height="40" 
                    FontSize="14"
                    Click="ProductsButton_Click"
                    Margin="0,0,0,10"/>

            
            <Button x:Name="OrdersButton" 
                    Content="Просмотр заказов" 
                    Height="40" 
                    FontSize="14"
                    Click="OrdersButton_Click"
                    Margin="0,0,0,10"
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>