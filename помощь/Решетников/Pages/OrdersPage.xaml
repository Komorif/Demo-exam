<Page x:Class="Решетников.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы" Height="213" Width="329">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Background="#A18191" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Список заказов" 
                          FontSize="16" FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <Button Grid.Column="1" x:Name="BackButton" 
                        Content="Назад" 
                        Padding="10,5"
                        Click="BackButton_Click"/>
            </Grid>
        </Border>


        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="OrdersItemsControl" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#4F4843" BorderThickness="1" 
                                Margin="0,5" Padding="15" 
                                Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>


                                <TextBlock Grid.Row="0" Text="{Binding OrderInfo}" 
                                          FontSize="16" FontWeight="Bold" 
                                          Margin="0,0,0,10"/>


                                <TextBlock Grid.Row="1" Text="{Binding UserInfo}" 
                                          Margin="0,0,0,5"/>


                                <ItemsControl Grid.Row="2" ItemsSource="{Binding OrderItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding .}" Margin="0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
