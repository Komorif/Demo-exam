<Page x:Class="Решетников.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Товары" Height="311" Width="615">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Background="#A18191" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Список товаров" 
                          FontSize="16" FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <Button Grid.Column="1" x:Name="BackButton" 
                        Content="Назад" 
                        Padding="10,5"
                        Click="BackButton_Click"/>
            </Grid>
        </Border>


        <Border Grid.Row="1" Background="#F5F5F5" Padding="10" x:Name="FilterPanel">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="SearchTextBox" Width="200" Height="25" Margin="0,0,15,0"
                        TextChanged="SearchTextBox_TextChanged"/>

                <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="CategoryComboBox" Width="150" Height="25" Margin="0,0,15,0"
                         SelectionChanged="CategoryComboBox_SelectionChanged"/>


                <Button x:Name="AddProductButton" Content="+ Добавить товар" 
                       Click="AddProductButton_Click" Padding="10,5"
                       Visibility="Collapsed"/>

                <Button Content="Сбросить" Click="ResetFilters_Click" 
                       Margin="0,0,10,0" Padding="10,5"/>
            </StackPanel>
        </Border>


        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#4F4843" BorderThickness="1" 
                                Margin="0,5" Padding="15" 
                                Background="{Binding BackgroundColor}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>


                                <TextBlock Grid.Row="0" Text="{Binding ProductName}" 
                                          FontSize="16" FontWeight="Bold" 
                                          Margin="0,0,0,10"/>


                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Скидка: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DiscountText}"/>
                                    <TextBlock Text=" | " Margin="5,0"/>
                                    <TextBlock Text="Цена со скидкой: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding FinalPriceText}"/>
                                </StackPanel>


                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock Text="Категория: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Category}" Margin="0,0,20,0"/>

                                    <TextBlock Text="Базовая цена: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0} руб}" 
                                              TextDecorations="{Binding PriceDecoration}"
                                              Foreground="{Binding PriceColor}"/>
                                </StackPanel>


                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" 
                                           Margin="0,10,0,0"
                                           Visibility="{Binding AdminButtonsVisibility}">
                                    <Button Content="Редактировать" Margin="0,0,10,0" 
                                           Padding="5,2" Tag="{Binding ProductId}"
                                           Click="EditProductButton_Click"/>
                                    <Button Content="Удалить" Padding="5,2" 
                                           Tag="{Binding ProductId}"
                                           Click="DeleteProductButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
