<Page x:Class="Фамилия.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Фамилия.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин:" Margin="0,0,0,5" FontFamily="Calibri"/>
            <TextBox x:Name="LoginTextBox" Height="30" Margin="0,0,0,15"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,5" FontFamily="Calibri"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>
            <Button x:Name="LoginButton" Content="Войти" Height="35"
                    Margin="0,0,0,10" FontFamily="Calibri"
                    Background="#FC220A"
                    Foreground="White"
                    Click="LoginButton_Click_1"/>

            <Button x:Name="GuestButton" Content="Войти как гость" 
                    Height="35" Width="300"
                    Margin="0,0,0,10"
                    FontFamily="Calibri"
                    Background="#FC220A"
                    Foreground="White"
                    Click="GuestButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
