<Page x:Class="Фамилия.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Фамилия.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>

        <Border>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="430" Width="780">

                <StackPanel>
                    <Button x:Name="LogoutButton" 
                        Content="Выйти" 
                        Height="40"
                        Width="70"
                        Margin="16,70,0,0"
                        HorizontalAlignment="Left"
                        Click="LogoutButton_Click"
                        Visibility="Collapsed"
                        Background="#4F4843"
                        Foreground="White"
                        FontFamily="Arial"/>

                    <Button x:Name="AuthButton" 
                        Content="Авторизироваться" 
                        Height="40"
                        Width="130"
                        Margin="0,70,12,0"
                        HorizontalAlignment="Right"
                        Click="AuthButton_Click"
                        Visibility="Collapsed"
                        Background="#4F4843"
                        Foreground="White"
                        FontFamily="Arial"/>

                </StackPanel>


                <StackPanel HorizontalAlignment="Center" Width="400" Margin="0,30,0,0" Height="191">
                    <Image Source="/images/Logo.png" Width="50" Height="50"/>

                    <Button x:Name="ProductsButton" 
                        Content="Просмотр товаров"
                        Height="40"
                        Width="120"
                        Click="ProductsButton_Click"
                        Margin="0,10,0,12"
                        Background="#4F4843"
                        Foreground="White"
                        FontFamily="Arial"/>

                    <Button x:Name="OrdersButton" 
                        Content="Просмотр заказов" 
                        Height="40" 
                        Width="120"
                        Click="OrdersButton_Click"
                        Margin="0,0,0,0"
                        Visibility="Collapsed"
                        Background="#4F4843"
                        Foreground="White"
                        FontFamily="Arial"/>
                </StackPanel>

            </StackPanel>

        </Border>
    </Grid>
</Page>
